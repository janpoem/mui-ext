{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "pretty": true,
    "outDir": "dist",
    "jsx": "react",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "paths": {
      "@mui-ext/core": ["../core/src"],
      "@mui-ext/hookform": ["../hookform/src"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../../node_modules",
    "src/**/*.spec.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
